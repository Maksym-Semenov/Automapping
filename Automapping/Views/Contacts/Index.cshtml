@model IEnumerable<Automapping.Models.Contact>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResidentialComplex)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeStreet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuildingNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuildingPart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Floor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResidentialComplex)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeStreet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BuildingNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BuildingPart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Floor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ContactId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ContactId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ContactId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
