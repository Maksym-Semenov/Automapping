@model Presentation.ViewModels.AddressProjectWithProjectViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="CreateFromProject">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ListAddressProjectProperties.FirstOrDefault().Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListAddressProjectProperties.FirstOrDefault().City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListAddressProjectProperties.FirstOrDefault().ResidentialComplex)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListAddressProjectProperties.FirstOrDefault().TypeStreet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListAddressProjectProperties.FirstOrDefault().Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListAddressProjectProperties.FirstOrDefault().BuildingNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListAddressProjectProperties.FirstOrDefault().Litera)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListAddressProjectProperties.FirstOrDefault().BuildingPart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListAddressProjectProperties.FirstOrDefault().Apt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListAddressProjectProperties.FirstOrDefault().Floor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListAddressProjectProperties.FirstOrDefault().Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListAddressProjectProperties.FirstOrDefault().LastUpdated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListProjectProperties.FirstOrDefault().OrderName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ListAddressProjectProperties) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResidentialComplex)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeStreet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BuildingNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Litera)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BuildingPart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Floor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdated)
            </td>
            <td>
                @{
                    string orderName = @Model.ListProjectProperties
                        .Where(p => p.Id == item.ProjectId)
                        .FirstOrDefault().OrderName;
                }
                @Html.DisplayFor(modelItem => orderName)
            </td>
            <td>
                <a asp-action="Update" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
