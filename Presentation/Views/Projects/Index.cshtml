@model Presentation.ViewModels.ProjectUserBranchViewModel

@{
    ViewData["Title"] = "List of projects";
}

<h1>List of projects</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ListProjectProperties.FirstOrDefault().OrderValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListProjectProperties.FirstOrDefault().OrderMonth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListProjectProperties.FirstOrDefault().OrderYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListProjectProperties.FirstOrDefault().OrderName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListProjectProperties.FirstOrDefault().Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListProjectProperties.FirstOrDefault().CustomerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListProjectProperties.FirstOrDefault().ManagerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListProjectProperties.FirstOrDefault().MakerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListProjectProperties.FirstOrDefault().MediatorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListProjectProperties.FirstOrDefault().Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListProjectProperties.FirstOrDefault().LastUpdated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListBranchProperties.FirstOrDefault().BranchName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListUserProperties.FirstOrDefault().FirstName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ListProjectProperties) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderMonth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManagerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MakerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MediatorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdated)
            </td>
            <td>
                @{
                    string? branchName = @Model.ListBranchProperties
                        .Where(b => b.Id == item.BranchId)
                        .FirstOrDefault().BranchName;
                }
                @Html.DisplayFor(modelItem => branchName)
            </td>
            <td>
                @{
                    string? userName = @Model.ListUserProperties
                        .Where(u => u.Id == item.UserId)
                        .FirstOrDefault().FirstName;
                }
                @Html.DisplayFor(modelItem => userName)
            </td>
            <td>
                <a asp-action="Update" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                <a asp-controller="AddressProjects" asp-action="CreateFromProject" asp-route-id="@item.Id">Add address</a> 
            </td>
        </tr>
}
    </tbody>
</table>
